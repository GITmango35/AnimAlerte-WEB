@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model IEnumerable<AnimAlerte.Models.Administrateur>

@{
    ViewData["Title"] = localizer["Index"];
}

<h1>@localizer["Index"]</h1>

<p>
    <a asp-action="Create">@localizer["Create"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @localizer["DateCreation"]
            </th>
            <th>
                @localizer["NomAdmin"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomAdminNavigation.NomUtilisateur)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NomAdmin">@localizer["Edit"]</a> |
                    <a asp-action="Details" asp-route-id="@item.NomAdmin">@localizer["Details"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.NomAdmin">@localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
