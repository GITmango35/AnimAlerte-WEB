@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@model AnimAlerte.Models.Annonce

@{
    ViewData["Title"] = localizer["DesactivAnnonce"];
}

<h1>@localizer["DesactivAnnonce"]</h1>

<h3>@localizer["Confirmationdesact"]</h3>
<div>

    <dl class="row">
        <dt class="col-sm-2">
            @localizer["TitreAnnonce"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class="col-sm-2">
            @localizer["DateCreation"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreation)
        </dd>

        <dt class="col-sm-2">
            @localizer["Description"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionAnnonce)
        </dd>
        <dt class="col-sm-2">
            @localizer["Ville"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ville)
        </dd>

        <dt class="col-sm-2">
            @localizer["TypeAnnonce"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeAnnonce)
        </dd>

    </dl>
    <form asp-action="DesactiverAnnonce" asp-route-id="@Model.IdAnnonce">
        <input type="hidden" asp-for="IdAnnonce" />
        <input type="hidden" asp-for="IdAnimal" />
        <input type="hidden" asp-for="Titre" />
        <input type="hidden" asp-for="TypeAnnonce" />
        <input type="hidden" asp-for="DateCreation" />
        <input type="hidden" asp-for="DescriptionAnnonce" />
        <input type="hidden" asp-for="Ville" />
        <input type="hidden" asp-for="NomUtilisateur" />
        <input type="hidden" asp-for="NomAdminDesactivateur" value=@ViewBag.admin />
        <input type="submit" value= @localizer["Desactiver"] class="btn btn-danger" /> |
        <a asp-action="RechercheAnnonce"> @localizer["RetourListe"]</a>
    </form>

</div>
