@model AnimAlerte.ViewModels.AnnonceModifViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Details";
}

<h1>@localizer["DetailsOf"]  @Html.DisplayFor(model => model.Titre) </h1>
<hr />


<div class="container mt-5">
    <div class="card">
        <div class="row">
            <div class="col-md-4">


                @if (Model.PhotoPath != null)
                {
                    <img src="~/uploads/@Model.PhotoPath" style="width:300px;" class="img-thumbnail" asp-append-version="true" />
                }
                else
                {
                    <img src="~/uploads/Noimg.jpg" style="width:300px;" class="img-thumbnail" asp-append-version="true" />
                }
            </div>
            <div class="col-md-8">
                <h4 class="card-title mt-3"> @Html.DisplayFor(model => model.Titre)</h4>
                <dl class="row">
                    <dt class="col-sm-4">
                        @localizer["AdId"]
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.IdAnnonce)
                    </dd>
                    <dt class="col-sm-4">
                        @localizer["AnimalName"]
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.NomAnimal)
                    </dd>

                    <dt class="col-sm-4">
                        @localizer["PublishDate"]
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DateCreation)
                    </dd>
                    <dt class="col-sm-4">
                        @localizer["City"]
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Ville)
                    </dd>
                    <dt class="col-sm-4">
                        @localizer["AdType"]
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.TypeAnnonce)
                    </dd>
                    <dt class="col-sm-4">
                        @localizer["Description"]
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DescriptionAnnonce)
                    </dd>

                </dl>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="card border border-light shadow-sm">
        <div class="card-header">@localizer["Contact"] </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">
                    @localizer["Name"]
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NomUtilisateur)
                </dd>
                <dt class="col-sm-4">
                    @localizer["Email"]
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Courriel)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>
