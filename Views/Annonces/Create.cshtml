@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model AnimAlerte.Models.Annonce


@{
    ViewData["Title"] = "Créer une annonce";
}

<h1>Créer Annonce</h1>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Succès ! </strong> @TempData["AlertMessage"]
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titre" class="control-label"></label>
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ville" class="control-label"></label>
                <input asp-for="Ville" class="form-control" />
                <span asp-validation-for="Ville" class="text-danger"></span>
            </div>
            <p>Type d'annonce:</p>
            <div class="form-group">
                <div class="form-check my-2">
                    <input type="radio" asp-for="TypeAnnonce" class="form-check-input" checked value="perdu" />
                    <label asp-for="TypeAnnonce" class="form-check-label">Perdu</label>
                </div>
                <div class="form-check my-2">
                    <input type="radio" asp-for="TypeAnnonce" class="form-check-input" value="trouve" />
                    <label asp-for="TypeAnnonce" class="form-check-label">Trouvé</label>
                    <span asp-validation-for="TypeAnnonce" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionAnnonce" class="control-label"></label>
                <textarea asp-for="DescriptionAnnonce" class="form-control" rows="3"></textarea>
                <span asp-validation-for="DescriptionAnnonce" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdAnimal" class="control-label">Choisissez l'animal</label>

                <select asp-for="IdAnimal" class="form-control"
                        asp-items="@(new SelectList(ViewBag.animaux_User, "IdAnimal", "NomAnimal"))">
                </select>
                <span asp-validation-for="IdAnimal" class="text-danger"></span><br />

                <a asp-controller="Animals" asp-action="AjoutAnimal">
                    <input type="button" class="btn btn-success rounded" value="Ajouter un animal" />
                </a>

            </div>
            <div class="form-group">
                <input type="submit" value="Afficher" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="TousMesAnnonces">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
