@model AnimAlerte.Models.Annonce
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "DetailAnnonce";
}

<h1>@localizer["DetailsOf"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @localizer["AdId"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdAnnonce)
        </dd>
        <dt class="col-sm-2">
            @localizer["TitreAnnonce"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class="col-sm-2">
            @localizer["DateCreation"] 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreation)
        </dd>
        <dt class="col-sm-2">
            @localizer["Description"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionAnnonce)
        </dd>
        <dt class="col-sm-2">
            @localizer["Ville"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ville)
        </dd>
        <dt class="col-sm-2">
            @localizer["TypeAnnonce"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeAnnonce)
        </dd>
        <dt class="col-sm-2">
            @localizer["UserName"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomUtilisateur)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="RechercheAnnonce">@localizer["RetourList"]</a>
</div>
