@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model AnimAlerte.Models.Utilisateur

@{ ViewData["Title"] = "Details"; }

<h1>@localizer["Profile"]</h1>

<div>
    <h4>@localizer["UserName"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
            @localizer["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
            @localizer["FirstName"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Courriel)
            @localizer["Email"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Courriel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MotDePasse)
            @localizer["Password"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MotDePasse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumTel)
            @localizer["Telephone"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumTel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UtilisateurActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UtilisateurActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAdmin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAdmin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomAdminDesactivateurNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomAdminDesactivateurNavigation.NomAdmin)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.NomUtilisateur">@localizer["Modify"]</a> |
    <a asp-action="Index">@localizer["Back"]</a>
</div>
