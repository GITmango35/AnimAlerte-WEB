@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model AnimAlerte.Models.Utilisateur

@{ ViewData["Title"] = "Delete"; }

<h1>@localizer["DeactivateAccount"]</h1>

<h3>@localizer["AreYouSure"]</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @localizer["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-2">
            @localizer["FirstName"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class="col-sm-2">
            @localizer["Email"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Courriel)
        </dd>
     
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="NomUtilisateur" />
        <input type="hidden" asp-for="NomUtilisateur" />

        <button type="submit" class="btn btn-danger">@localizer["Deactivate"]</button> |
        <a asp-action="Index">@localizer["Back"]</a>
    </form>
</div>
