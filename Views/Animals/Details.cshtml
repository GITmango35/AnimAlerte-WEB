@model AnimAlerte.ViewModels.ImageAnimalModifViewModel

@{
    ViewData["Title"] = "Details";

}

<h1>Détails</h1>

<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomAnimal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomAnimal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionAnimal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionAnimal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateInscription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateInscription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Espece)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Espece)
        </dd>
        <dd class="col-sm-10">
            <img src="~/uploads/@Model.PhotoPath" class="img-thumbnail" height="100" width="100" asp-append-version="true" />
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Modifier", "ModifierAnimal", new { idAnimal = @Model.IdAnimal }) |
    @Html.ActionLink("Supprimer", "Delete", new { idAnimal = @Model.IdAnimal }) |
    <a asp-action="MesAnimaux">Retour à la liste</a>
</div>
